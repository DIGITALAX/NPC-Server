{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "paths": {
      "*": ["./node_modules/*", "./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "node_modules/@types/text-encoding"]
}
